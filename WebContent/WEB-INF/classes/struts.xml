<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<package name="helloworld" extends="struts-default" namespace="/">
		
		<global-exception-mappings>
			<exception-mapping result="nullPointerException" exception="java.lang.NullPointerException"/>
		</global-exception-mappings>
	
		<action name="hello" class="com.ashish.struts2.HelloWorldAction" method="execute">
			<result name="success">/HelloWorld.jsp</result>
			<result name="nullPointerException">/npe.jsp</result>
		</action>
	
	</package>
</struts>